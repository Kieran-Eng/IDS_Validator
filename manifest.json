{
  "$schema": "https://developer.trimble.com/docs/connect/workspace-api/manifest-schema.json",
  "manifestVersion": "1.0",
  "id": "com.yourcompany.ifc-ids-validator",
  "version": "0.1.0",
  "name": "IFC IDS Validator",
  "description": "Validates IFC models against IDS specifications.",
  "developer": {
    "name": "Your Name or Company",
    "url": "https://your-website.com"
  },
  "icons": [
    {
      "src": "https://your-hosting.com/icon16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "https://your-hosting.com/icon48.png",
      "sizes": "48x48",
      "type": "image/png"
    }
  ],
  "permissions": [
    "context:read",  // To get info about the current project/view
    "file:read"      // Potentially needed to get file details/URLs
    // Add other permissions like "model:read", "selection:read" if needed later
  ],
  "host": {
    "url": "https://kieran-eng.github.io/IDS_Validator/Frontend.html", // Replace with your actual hosted frontend URL
    "type": "iframe",
    "location": "viewerSidebarPanel"
  }
}
